{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6", "dom"
    ],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "outDir": "js",
    "declaration": true,
  },
  "include": [
    "ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "ts/__mocks__/*.ts",
    "ts/__tests__/*.ts"
  ]
}